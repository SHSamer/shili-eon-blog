{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<div class="container">
    <div class="row">
        <form class = "formulaire" action="{{ path("fos_user_security_check") }}" method="post">
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            {% endif %}

            <h2 class="heading"> Please sign in </h2>
            <div class="custom-input">
                {#<label for="username">{{ 'username'|trans }}</label>#}
                <input placeholder="Username"  type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />
            </div>

            <div class="custom-input">
                {#<label for="password">{{ 'password'|trans }}</label>#}
                <input  placeholder="Password"  type="password" id="password" name="_password" required="required" autocomplete="current-password" />
            </div>

            <div class="custom-checkbox">
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                <label for="remember_me">{{ 'Remember me'|trans }}</label>
            </div>
            <div class="row" style="margin-top: 25px">
                <div class="col-lg custom-link" style="padding-right: 0;">
                    <a href="/register">{{'create an account' | trans }}</a>
                </div>
                <div class="col-lg" style="text-align: right;">
                    <input class="custom-button" type="submit" id="_submit" name="_submit" value="{{ 'submit'|trans }}" />
                </div>
            </div>
        </form>
    </div>
</div>

{% block stylesheets %}
    <style>
        .heading {
            font-size: 20px;
            text-align: center;
            margin-bottom: 25px;
            font-weight: 500;
        }
        .formulaire {
             font-size: large;
             border: 1px solid gainsboro;
             padding: 45px 50px;
             border-radius: 10px;
             margin: 0 auto;
             box-shadow: 1px 1px 10px 1px rgba(0, 0, 255, .2);
         }
        .custom-input{
            margin: 15px 0;
        }
        .custom-input label{
            display: block;
            margin: 0;
        }
        .custom-input input, .custom-input input:focus{
            display: block;
            background-color: white !important;
            border-radius: 5px;
            padding: 10px 15px;
            border: 1px solid gainsboro;
            font-size: 18px;
        }
        .custom-checkbox label{
            font-weight: 500;
            font-size: 16px;
            vertical-align: top;
            margin: 0;
        }
        .custom-link a{
            font-size: 13px;
            font-weight: 500;
            text-decoration: none;
        }
        .custom-button {
            border-radius: 5px;
            border: none !important;
            padding: 5px 20px ;
            box-shadow: none !important;
            background: dodgerblue;
            color: white;
            font-size: 14px;
            font-weight: 500;
            font-family: inherit !important;
            cursor: pointer;
            transition: 0.3s;
            vertical-align: top;
            text-align: right;
        }
        .custom-button:hover, .custom-button:focus {
            background: royalblue;
        }
    </style>
{% endblock %}