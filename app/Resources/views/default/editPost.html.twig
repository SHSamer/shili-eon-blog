{% extends "base.html.twig" %}


{% block body %}

    <div class="container" align="center">
        {{ form_start(edit_form) }}
        <div class="row">
            <div class="custom-post col-lg">
                <h1>{{ 'post.modification.title' | trans }}</h1>
                <div class="input-field">
                    {{ form_widget(edit_form.title, {'attr': {'value': post.title}}) }}
                </div>

                <hr>
                <h1>{{ 'post.modification.content' | trans }}</h1>
                <div>
                    {{ form_widget(edit_form.content, {'attr': {'value': post.content}}) }}
                </div>
                <div class="card-footer">
                    {{ form_widget(edit_form.edit) }}
                </div>
            </div>
        </div>
        {{ form_end(edit_form) }}
    </div>

{% endblock %}


